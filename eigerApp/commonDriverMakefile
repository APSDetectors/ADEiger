# PROD_NAME must be defined
# Should be used in an include before ADCore's commonDriverMakefile

$(PROD_NAME)_DBD += eigerDetectorSupport.dbd

PROD_LIBS += eigerDetector frozen lz4

ifdef ZMQ_LIB
  zmq_DIR        += $(ZMQ_LIB)
  PROD_LIBS      += zmq
else
  PROD_SYS_LIBS  += zmq
endif

ifdef HDF5_LIB
  hdf5_hl_DIR    += $(HDF5_LIB)
  PROD_LIBS      += hdf5_hl
else
  PROD_SYS_LIBS  += hdf5_hl
endif
